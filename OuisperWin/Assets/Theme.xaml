<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="InkColor">#0F1214</Color>
    <Color x:Key="SlateColor">#1C1F24</Color>
    <Color x:Key="MistColor">#E0E6EB</Color>
    <Color x:Key="NeonColor">#C7F24D</Color>
    <Color x:Key="EmberColor">#FA7340</Color>
    <Color x:Key="CyanColor">#59D9F2</Color>
    <Color x:Key="VioletColor">#A673F2</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="InkBrush" Color="{StaticResource InkColor}" />
    <SolidColorBrush x:Key="SlateBrush" Color="{StaticResource SlateColor}" />
    <SolidColorBrush x:Key="MistBrush" Color="{StaticResource MistColor}" />
    <SolidColorBrush x:Key="NeonBrush" Color="{StaticResource NeonColor}" />
    <SolidColorBrush x:Key="EmberBrush" Color="{StaticResource EmberColor}" />
    <SolidColorBrush x:Key="CyanBrush" Color="{StaticResource CyanColor}" />
    <SolidColorBrush x:Key="VioletBrush" Color="{StaticResource VioletColor}" />

    <!-- Gradients -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F21C1F24" Offset="0"/> <!-- Slate 95% -->
        <GradientStop Color="#F20F1214" Offset="1"/> <!-- Ink 95% -->
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="BackgroundGradientBrush" Center="0.2,0.2" GradientOrigin="0.2,0.2" RadiusX="1.5" RadiusY="1.5">
        <GradientStop Color="#E61C1F24" Offset="0"/> <!-- Slate 90% -->
        <GradientStop Color="#FF0F1214" Offset="1"/> <!-- Ink 100% -->
    </RadialGradientBrush>

    <!-- Styles -->
    <Style x:Key="GlassCardStyle" TargetType="StackPanel">
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Background" Value="{StaticResource CardGradientBrush}"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#14FFFFFF"/> <!-- White 8% -->
        <!-- Shadow is handled by parent or ThemeShadow in WinUI -->
    </Style>

</ResourceDictionary>
